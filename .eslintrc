{
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2016,
      "sourceType": "module"
    },
    "env": {
        "node": true,
        "jest": true
        },
    "rules": {
      "array-callback-return": 2,
      "complexity": [2, 10],
      "eqeqeq": 2,
      "max-statements": [2, 30],
      "max-statements-per-line": [2, {
        "max": 1
      }],
      "max-nested-callbacks": [2, 2],
      "max-depth": [2, {
        "max": 2
      }],
      "no-eval": 2,
      "no-return-assign": 2,
      "no-param-reassign": 2,
      "no-var": 2,
      "prefer-const": 2
    }
  }