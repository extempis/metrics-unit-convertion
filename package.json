{
  "name": "metrics-unit-convertion",
  "version": "1.0.0",
  "description": "Javascript library to convert metrics between units.",
  "scripts": {
    "build": "rollup -c",
    "test": "jest --coverage",
    "precommit": "lint-staged",
    "eslint": "eslint --max-warnings=0 --fix src/**/*.js",
    "ci": "npm run eslint && npm run test"
  },
  "author": "extempis",
  "license": "MIT",
  "files": [
    "dist/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.13",
    "@babel/preset-env": "^7.18.10",
    "babel-jest": "^29.0.1",
    "eslint": "^8.23.0",
    "husky": "^8.0.1",
    "jest": "^29.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-javascript-obfuscator": "^1.0.4",
    "rollup-plugin-terser": "^7.0.2"
  },
  "dependencies": {},
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "npm run ci",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ]
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  },
  "jest": {
    "testEnvironment": "node"
  }
}
